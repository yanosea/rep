<!-- pege of config/credential for config cred.toml -->
@page "/config/credential"

<div class="m-auto max-w-screen-md px-6 md:px-4 lg:px-0 py-8 space-y-8">
    <Title title="config" />
    <ConfigTab config="credential" />
    <h2 class="mb-1 font-bold text-xl">account</h2>
    <TextBox icon="at-symbol"
             placeholder="example@example.com"
             text="mailaddress"
    @bind-value="mailaddress" />
    <TextBox icon="key"
             text="password"
             is_password=true
    @bind-value=password />
    <h2 class="mb-1 font-bold text-xl">smtp</h2>
    <TextBox icon="server"
             placeholder="example.com"
             text="smtp server"
    @bind-value=smtpServer />
    <NumberBox icon="arrow-left-on-rectangle"
               placeholder="25"
               text="smtp port"
               min="0"
               max="65535"
    @bind-value=smtpPort />
    <Button icon="bookmark-square"
            text="save"
            bg="bg-blue-500"
            bg_hover="bg-blue-700"
            font_color="text-white"
            OnClick="SaveCredential" />
</div>
