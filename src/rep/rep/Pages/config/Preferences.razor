<!-- pege of config/preferences for config pref.toml -->
@page "/config/preferences"

<div class="m-auto max-w-screen-md px-6 md:px-4 lg:px-0 py-8 space-y-8">
    <Title title="config" />
    <ConfigTab config="preferences" />
    <h2 class="mb-1 font-bold text-xl">user</h2>
    <TextBox icon="user"
             placeholder="example"
             text="last name"
    @bind-value="lastName" />
    <TextBox icon="user"
             placeholder="example"
             text="first name"
    @bind-value="firstName" />
    <TextBox icon="building-office"
             placeholder="example"
             text="company"
    @bind-value="company" />
    <TextBox icon="user-group"
             placeholder="example"
             text="project name"
    @bind-value="projectName" />
    <h2 class="mb-1 font-bold text-xl">preference</h2>
    <Toggle text="dark mode" @bind-value="darkMode" />
    <Toggle text="check updates" @bind-value="checkUpdates" />
    <Toggle text="check updates on opening" @bind-value="checkUpdatesOnOpening" />
    <Toggle text="skip top page" @bind-value="skipTopPage" />
    <Toggle text="confirm before send" @bind-value="confirmBeforeSend" />
    <Toggle text="save text file" @bind-value="saveTextFile" />
    <Toggle text="save destination" @bind-value="saveDestination" />
    <Toggle text="add date to attached  file" @bind-value="addDateToAttachedFile" />
    <Toggle text="exit after send" @bind-value="exitAfterSend" />
    <Button icon="bookmark-square"
            text="save"
            bg="bg-blue-500"
            bg_hover="bg-blue-700"
            font_color="text-white"
            OnClick="SavePreferences" />
</div>
