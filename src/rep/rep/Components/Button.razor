<!-- button component -->
<div class="flex justify-end w-full px-6 py-2">
    <button type="submit"
            class="@($"{bg} hover:{bg_hover} {font_color} flex justify-center py-2 px-4 rounded")"
    @onclick="OnClickHandler">
        <Heroicon Name=@icon class="w-6 mr-2" />
        <span>@text</span>
    </button>
</div>